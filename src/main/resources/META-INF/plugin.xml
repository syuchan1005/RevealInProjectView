<idea-plugin>
  <id>com.github.syuchan1005.revealinprojectview</id>
  <name>Reveal in Project View</name>
  <vendor email="syuchan.dev@gmail.com" url="https://syuchan1005.github.io">syuchan1005</vendor>

  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <action id="RevealInProjectView"
            class="com.github.syuchan1005.revealinprojectview.RevealFileAction"
            text="Reveal In ProjectView"
            description="Open current file in Project View">
      <add-to-group group-id="RevealGroup" anchor="last"/>
    </action>
  </actions>

</idea-plugin>
